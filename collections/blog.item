
{.section item}

  <!--WRAPPER-->
  
  <article id="post-{id}" class="post-article  {@|item-classes}">
    <section class="post-content">
      <header class="post-header">  
        <div class="post-featured-image">  
        {.main-image?}  
          <a href="{fullUrl}" class="main-image content-fill">
            <img {@|image-meta} />
          </a>
        {.end}
        </div>
    
        <!--POST TILE-->
    
        <h1 class="title">
          {.passthrough?}
            <a href="{sourceUrl}">{title}</a>
          {.or}
            <a href="{fullUrl}">{title}</a>
          {.end}
        </h1>
        
      </header>

    <!--MAIN CONTENT-->

    <div class="post-body">

    {body}

    <!--BLOG INJECTION-->

    {postItemInjectCode}    

    <!--CATEGORIES-->

    {.repeated section categories}
      <a class="category" href="?category={@|url-encode}">{@}</a>{.alternates with},
    {.end}

    <!--TAGS-->

    {.repeated section tags}
      <a class="tag" href="?tag={@|url-encode}">{@}</a>{.alternates with},
    {.end}

    <!--SHARE AND LIKE-->

    {@|like-button}
    {@|social-button}

    <!--AUTHOR AND DATE-->
    
    <p class="meta">
      Published on <a href="{fullUrl}">{addedOn|date %B %d, %Y}</a> by <a href="?author={author.id}">{author.displayName}</a>.
      {.section sourceUrl}
        <a href="{@}" class="source" target="_blank">Source</a>.
      {.end}
    </p>        

    <!--LOCATION-->

    {.section location}
      {.section addressTitle}
        {addressTitle}
        {addressLine1}
        {addressLine2}
        {addressCountry}
      {.end}
    {.end}

    <!--COMMENTS-->

    {@|comments}
    
    </div>
    </section>
  </article>

{.end}
    

<!--PAGINATION-->
  
{.section pagination}
  <nav>

    <!--NEWER PAGE-->

    {.section prevItem}
      <a href="{fullUrl}">&rarr;</a>
    {.or}
      <a class="disabled">&rarr;</a>
    {.end}
    
    <!--OLDER PAGE-->

    {.section nextItem}
      <a href="{fullUrl}">&larr;</a>
    {.or}
      <a class="disabled">&larr;</a>
    {.end}

  </nav>
{.end}
